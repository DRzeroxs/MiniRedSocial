@using MiniRedSocial.Core.Application.ViewModels.Publication;
@model SavePublicationViewModel
@{
    ViewData["Title"] = "Eliminar Publicacion";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>Crear Publicacion</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Publication" asp-action="EliminarPublicacion" >

                        <input hidden asp-for="Tipe" />

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Mensaje: </label>
                            <textarea asp-for="Content" class="form-control" readonly></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        @if (Model.Tipe != 1)
                        {
                            <div class="mb-3">
                                <label asp-for="Url" class="form-label">URL del video: </label>
                                <input asp-for="Url" class="form-control" readonly/>
                                <span asp-validation-for="Url" class="text-danger"></span>
                            </div>
                        }

                        <input type="datetime-local" asp-for="Date" class="form-control" hidden />

                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-controller="User" asp-action="Index" class="btn btn-warning">Volver atras</a>

                    </form>




                </div>

            </div>
        </div>
    </div>

</div>



